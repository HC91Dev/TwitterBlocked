{
  "manifest_version": 2,
  "name": "Twitter Blocklist Extension",
  "version": "1.0",
  "description": "Hide blocked users' content on Twitter.",
  "permissions": [
    "storage",
    "cookies",
    "activeTab",
    "webRequest",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true  
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "blocked_users.json"
  ]
}
