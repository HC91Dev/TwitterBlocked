{
    "manifest_version": 2,
    "name": "Twitter Blocklist Extension",
    "version": "1.0",
    "description": "Hide blocked users' content on Twitter.",
    "permissions": [
        "storage",
        "cookies",
        "activeTab",
        "webRequest",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "web_accessible_resources": [
        "blocked_users.json"
    ]
}
